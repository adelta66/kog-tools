{
  "name": "KOG tools",
  "description": "",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "/images/logo16.png",
      "32": "/images/logo32.png",
      "48": "/images/logo48.png",
      "128": "/images/logo128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://kog.tw/*",
        "https://qshar.com/*"
      ],
      "run_at": "document_end",
      "all_frames": true,
      "js": ["contentScript.js"],
      "css": [ "tableSortable.css" ]
    }
  ],
  "icons": {
    "16": "/images/logo16.png",
    "32": "/images/logo32.png",
    "48": "/images/logo48.png",
    "128": "/images/logo128.png"
  }

}
